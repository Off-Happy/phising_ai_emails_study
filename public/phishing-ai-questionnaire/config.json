{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/v2.3.1/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "Phishing AI Questionnaire",
    "version": "pilot",
    "authors": [
      "Claudiu Veres"
    ],
    "date": "2025-11-10",
    "description": "A study that investigates the effectiveness of AI-generated phishing emails.",
    "organizations": [
      "University of Groningen"
    ]
  },
  "uiConfig": {
    "contactEmail": "a.veres.1@student.rug.nl",
    "helpTextPath": "phishing-ai-questionnaire/assets/help.md",
    "logoPath": "revisitAssets/revisitLogoSquare.svg",
    "withProgressBar": true,
    "autoDownloadStudy": false,
    "withSidebar": true
  },
  "components": {
    "introduction": {
      "type": "markdown",
      "path": "phishing-ai-questionnaire/assets/introduction.md",
      "response": []
    },
    "personal-information": {
      "type": "questionnaire",
      "response": [
        {
          "id": "gender",
          "prompt": "What is your gender?",
          "required": true,
          "location": "aboveStimulus",
          "type": "dropdown",
          "placeholder": "Please select your gender",
          "options": [
            "Male",
            "Female",
            "Non-binary",
            "Prefer not to say"
          ]
        },
        {
          "id": "age",
          "prompt": "What is your age range?",
          "required": true,
          "location": "aboveStimulus",
          "type": "dropdown",
          "placeholder": "Please select an option",
          "options": [
            "Under 18",
            "18-24",
            "25-34",
            "35-44",
            "45-54",
            "55-64",
            "65 or older"
          ]
        },
        {
          "id": "education-level",
          "prompt": "What is your highest level of education?",
          "required": true,
          "location": "aboveStimulus",
          "type": "dropdown",
          "placeholder": "Please select an option",
          "options": [
            "High school or equivalent",
            "Associate degree",
            "Bachelor's degree",
            "Master's degree",
            "Doctorate or higher"
          ]
        },
        {
          "id": "email-experience-english",
          "prompt": "How often do you use email in english language in your daily life?",
          "required": true,
          "location": "aboveStimulus",
          "type": "dropdown",
          "placeholder": "Please select an option",
          "options": [
            "Multiple times a day",
            "Once a day",
            "A few times a week",
            "Rarely",
            "Never"
          ]
        },
        {
          "id": "english-proficiency",
          "prompt": "How would you rate your proficiency in English?",
          "required": true,
          "location": "aboveStimulus",
          "type": "dropdown",
          "placeholder": "Please select an option",
          "options": [
            "Native or bilingual proficiency",
            "Full professional proficiency",
            "Limited professional proficiency",
            "Elementary proficiency",
            "Beginner"
          ]
        }
      ]
    },
    "privacy-concerns": {
      "type": "questionnaire",
      "instruction": "Please indicate how much you agree or disagree with the following statements.",
      "response": [
        {
          "id": "concern-open-email",
          "prompt": "I am cautious when opening emails that contain links or attachments.",
          "required": true,
          "location": "aboveStimulus",
          "type": "slider",
          "options": [
            {"label": "1", "value": 1},
            {"label": "2", "value": 2},
            {"label": "3", "value": 3},
            {"label": "4", "value": 4},
            {"label": "5", "value": 5},
            {"label": "6", "value": 6},
            {"label": "7", "value": 7}
          ],
          "startingValue": 4,
          "spacing": 1,
          "snap": true,
          "withBar": true
        },
        {
          "id": "concern-verify-sender",
          "prompt": "I usually verify the senderâ€™s identity before interacting with an email.",
          "required": true,
          "location": "aboveStimulus",
          "type": "slider",
          "options": [
            {"label": "1", "value": 1}, {"label": "2", "value": 2}, {"label": "3", "value": 3}, {"label": "4", "value": 4},
            {"label": "5", "value": 5}, {"label": "6", "value": 6}, {"label": "7", "value": 7}
          ],
          "startingValue": 4,
          "spacing": 1,
          "snap": true,
          "withBar": true
        },
        {
          "id": "concern-data-collection",
          "prompt": "I am concerned about the amount of personal information that online services collect about me.",
          "required": true,
          "location": "aboveStimulus",
          "type": "slider",
          "options": [
            {"label": "1", "value": 1}, {"label": "2", "value": 2}, {"label": "3", "value": 3}, {"label": "4", "value": 4},
            {"label": "5", "value": 5}, {"label": "6", "value": 6}, {"label": "7", "value": 7}
          ],
          "startingValue": 4,
          "spacing": 1,
          "snap": true,
          "withBar": true
        },
        {
          "id": "concern-transparency",
          "prompt": "I find it worrying when companies do not clearly explain how they use my personal information.",
          "required": true,
          "location": "aboveStimulus",
          "type": "slider",
          "options": [
            {"label": "1", "value": 1}, {"label": "2", "value": 2}, {"label": "3", "value": 3}, {"label": "4", "value": 4},
            {"label": "5", "value": 5}, {"label": "6", "value": 6}, {"label": "7", "value": 7}
          ],
          "startingValue": 4,
          "spacing": 1,
          "snap": true,
          "withBar": true
        },
        {
          "id": "concern-control",
          "prompt": "It is important to me to have control over how my personal information is used online.",
          "required": true,
          "location": "aboveStimulus",
          "type": "slider",
          "options": [
            {"label": "1", "value": 1}, {"label": "2", "value": 2}, {"label": "3", "value": 3}, {"label": "4", "value": 4},
            {"label": "5", "value": 5}, {"label": "6", "value": 6}, {"label": "7", "value": 7}
          ],
          "startingValue": 4,
          "spacing": 1,
          "snap": true,
          "withBar": true
        },
        {
          "id": "concern-online-privacy",
          "prompt": "I am concerned about my privacy when interacting with online services.",
          "required": true,
          "location": "aboveStimulus",
          "type": "slider",
          "options": [
            {"label": "1", "value": 1}, {"label": "2", "value": 2}, {"label": "3", "value": 3}, {"label": "4", "value": 4},
            {"label": "5", "value": 5}, {"label": "6", "value": 6}, {"label": "7", "value": 7}
          ],
          "startingValue": 4,
          "spacing": 1,
          "snap": true,
          "withBar": true
        }
      ]
    },
    "mock-email-1": {
      "type": "website",
      "path": "phishing-ai-questionnaire/assets/email-template.html",
      "parameters": {
        "emailDataPath": "/phishing-ai-questionnaire/assets/mock_email_rich.json"
      },
      "withSidebar": true,
      "responseOrder": "fixed",
      "response": [
        {
          "id": "phish-judgment",
          "prompt": "Is this email a phishing attempt?",
          "location": "sidebar",
          "type": "radio",
          "options": [
            {
              "label": "Yes",
              "value": "yes"
            },
            {
              "label": "No",
              "value": "no"
            }
          ]
        },
        {
          "id": "ai-judgment",
          "prompt": "Do you think generative AI has been involved in the creation of this email?",
          "location": "sidebar",
          "type": "radio",
          "options": [
            {
              "label": "Yes",
              "value": "yes"
            },
            {
              "label": "No",
              "value": "no"
            }
          ]
        },
        {
          "id": "ai-degree-involvment",
          "prompt": "To what degree do you think generative AI was involved in the creation of this email?",
          "location": "sidebar",
          "type": "slider",
          "options": [
            {
              "label": "0",
              "value": 0
            },
            {
              "label": "25",
              "value": 25
            },
            {
              "label": "50",
              "value": 50
            },
            {
              "label": "75",
              "value": 75
            },
            {
              "label": "100",
              "value": 100
            }
          ],
          "startingValue": 0,
          "spacing": 25,
          "snap": true,
          "withBar": true
        },
        {
          "id": "events",
          "prompt": "Interaction log from the email view",
          "location": "belowStimulus",
          "type": "reactive",
          "hidden": true
        }
      ]
    },
    "feedback": {
      "type": "questionnaire",
      "instruction": "Thank you for participating in this study! Please click next to submit your responses.",
      "response": [
        {
          "id": "feedback-text",
          "prompt": "If you have any additional feedback or comments about this study, please share them below:",
          "required": false,
          "location": "aboveStimulus",
          "type": "longText",
          "placeholder": "Your feedback..."
        }
      ],
      "withSidebar": true
    }
  },  
  "sequence": {
    "order": "fixed",
    "components": [
      "introduction",
      "personal-information",
      "privacy-concerns",
      "mock-email-1",
      "feedback"
    ]
  }
}